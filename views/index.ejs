<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properties -->
  <title><%= process.env.TITLE %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
  <style>
    .main.container {
      margin-top: 5em;
    }
  </style>
</head>
<body>
  <div class="ui main container">
    <img src="<%= process.env.LOGO %>" alt="logo">
    <div class="ui icon message">
      <i class="inbox icon"></i>
      <div class="content">
        <div class="header">
          Départ de Jérémy
        </div>
        <p><%= process.env.MESSAGE %></p>
      </div>
    </div>
    <% if (locals.flash && locals.flash.error) { %> 
    <div class="ui negative message">
      <%= flash.error %> 
    </div>
    <% } %> 
    <% if (locals.flash && locals.flash.success) { %> 
    <div class="ui positive message">
      <%= flash.success %> 
    </div>
    <% } %>

<form action="/" method="post" class="ui form">
  <div class="field">
    <label>Nom</label>
    <input type="text" name="name">
  </div>
  <div class="field">
    <label for="message">Message</label>
    <textarea name="message" id="message"></textarea>
  </div>
  <button type="submit" class="ui blue labeled submit icon button">
    <i class="icon edit"></i>Envoyer
  </button>
</form>

<div class="ui comments">
  <h3 class="ui dividing header">Messages</h3>
  <% for (message of messages) { %>
    <div class="ui comments">
      <div class="comment">
        <a class="avatar">
          <img src="avatar.png">
        </a>
        <div class="content">
          <div class="author"><%= message.name %></div>
          <div class="metadata">
            <div class="date"><%= message.created_at.fromNow() %></div>
          </div>
          <div class="text">
            <%= message.content %>
          </div>
        </div>
      </div>
    </div>
  <% } %>
  <br>
  <br>
  </div>
</div>
</body>
</html>